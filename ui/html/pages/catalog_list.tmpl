{{define "title"}}Credit - Products{{end}}

{{define "main"}}
    <div>
        <h2>Products</h2>

        {{range .Products}}
            <div>
                <div>
                    <h3>{{ .Name }}</h3>
                    <div>{{ .PartnerName }}</div>
                </div>

                <div>
                    <p>{{ .Description }}</p>
                    <p>Price: <strong>{{ priceComma .Price }}</strong></p>
                </div>

                <div>
                    <a href='/catalogs/{{ .ID }}'>Lihat detail</a>
                </div>
            </div>
        {{end}}
    </div>
{{end}}